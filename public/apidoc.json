                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "day": {
                                    "type": "integer",
                                    "format": "int64"
                                },
                                "levels": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer",
                                        "format": "int64"
                                    }
                                }
                            },
                            "xml": {
                                "name": "Day"
                            }
